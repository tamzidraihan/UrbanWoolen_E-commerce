@model List<UrbanWoolen.Models.Order>
@{
    ViewData["Title"] = "My Orders";
}

<div class="container py-5">
    <h2 class="fw-bold text-success text-center mb-4">
        <i class="bi bi-bag-check-fill me-2"></i> My Orders
    </h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm">
            <i class="bi bi-info-circle me-2"></i>
            You have not placed any orders yet.
            <a asp-controller="Store" asp-action="Index" class="btn btn-outline-success btn-sm ms-2">Start Shopping</a>
        </div>
    }
    else
    {
        foreach (var order in Model)
        {
            <div class="card shadow-sm mb-4 border-0 rounded-3">
                <div class="card-header bg-white d-flex justify-content-between flex-wrap border-bottom">
                    <div><strong>Order ID:</strong> <span class="text-dark">#@order.Id</span></div>
                    <div><strong>Date:</strong> @order.OrderDate.ToString("dd MMM yyyy")</div>
                    <div>
                        <strong>Status:</strong>
                        <span class="badge rounded-pill bg-@(order.Status switch {
                            OrderStatus.Pending => "warning text-dark",
                            OrderStatus.Shipped => "primary",
                            OrderStatus.Delivered => "success",
                            _ => "secondary"
                        })">
                            @order.Status
                        </span>
                    </div>
                </div>

                <div class="card-body p-0">
                    <table class="table table-bordered align-middle mb-0">
                        <thead class="table-light text-center">
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in order.Items)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td class="text-center">@item.Quantity</td>
                                    <td>@item.Price.ToString("0.00") ৳</td>
                                    <td class="fw-semibold text-success">@(item.Price * item.Quantity).ToString("0.00") ৳</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="card-footer bg-white text-end">
                    <strong>Grand Total:</strong>
                    <span class="text-success fs-5 fw-bold">
                        ৳ @order.Items.Sum(i => i.Price * i.Quantity).ToString("0.00")
                    </span>
                </div>
            </div>
        }
    }
</div>
