@model UrbanWoolen.Models.Discount
@{
    ViewData["Title"] = "Create Discount";
}
<h2>Create Discount</h2>
<hr />
<form asp-action="Create" method="post" class="row g-3">
    @Html.AntiForgeryToken()
    <div class="col-md-6">
        <label class="form-label">Product</label>
        <select asp-for="ProductId" asp-items="ViewBag.Products" class="form-select"></select>
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label class="form-label">Type</label>
        <select asp-for="Type" class="form-select">
            <option value="0">Percentage</option>
            <option value="1">Flat</option>
        </select>
    </div>

    <div class="col-md-3">
        <label class="form-label">Value</label>
        <input asp-for="Value" type="number" step="any" class="form-control" />
        <small class="text-muted">If %: 0–100, If flat: amount in ৳</small>
        <span asp-validation-for="Value" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label class="form-label">Starts At (UTC)</label>
        <input asp-for="StartsAt" type="datetime-local" class="form-control" />
        <span asp-validation-for="StartsAt" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label class="form-label">Ends At (UTC)</label>
        <input asp-for="EndsAt" type="datetime-local" class="form-control" />
        <span asp-validation-for="EndsAt" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button class="btn btn-success" type="submit">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
