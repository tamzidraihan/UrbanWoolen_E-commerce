<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - UrbanWoolen</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css" />
</head>
<body class="bg-light">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-brand shadow-sm sticky-top">
        <div class="container-fluid px-4 px-lg-5">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">UrbanWoolen</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item">
                        <a class="nav-link nav-link-underline" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item"><a class="nav-link nav-link-underline" asp-controller="Product" asp-action="Dashboard">Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link nav-link-underline" asp-controller="Product" asp-action="Index">Products</a></li>
                        <li class="nav-item"><a class="nav-link nav-link-underline" asp-controller="Product" asp-action="Inventory">Inventory</a></li>
                        <li class="nav-item"><a class="nav-link nav-link-underline" asp-controller="Discount" asp-action="Index">Discounts</a></li>
                        <li class="nav-item"><a class="nav-link nav-link-underline" asp-controller="Order" asp-action="AllOrders">All Orders</a></li>
                    }
                    else if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item"><a class="nav-link nav-link-underline" asp-controller="Store" asp-action="Index">Shop</a></li>
                        <li class="nav-item"><a class="nav-link nav-link-underline" asp-controller="Order" asp-action="MyOrders">My Orders</a></li>
                        <li class="nav-item"><a class="nav-link nav-link-underline" asp-controller="Wishlist" asp-action="Index">Wishlist</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link nav-link-underline" asp-controller="Store" asp-action="Index">Shop</a></li>
                    }
                </ul>

                <ul class="navbar-nav">
                    @if (!User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="btn btn-outline-light position-relative me-3" asp-controller="Cart" asp-action="Index">
                                <i class="bi-cart-fill me-1"></i> Cart
                            </a>
                        </li>
                    }
                    <li class="nav-item">
                        <partial name="_LoginPartial" />
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Body -->
    <main class="py-4">
        <div class="container-fluid px-4 px-lg-5">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="py-4 bg-success text-white mt-auto">
        <div class="container-fluid px-4 px-lg-5 text-center">
            <p class="mb-0">&copy; 2025 UrbanWoolen. All rights reserved.</p>
        </div>
    </footer>

    <!-- Toast Notification -->
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 9999">
        <div id="toast-cart" class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">@TempData["CartMessage"]</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/scripts.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

    <script>
        AOS.init({ once: true, duration: 800 });

        document.addEventListener('DOMContentLoaded', function () {
            var toastBody = document.querySelector('#toast-cart .toast-body');
            if (toastBody && toastBody.innerText.trim() !== '') {
                new bootstrap.Toast(document.getElementById('toast-cart')).show();
            }
        });
    </script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
