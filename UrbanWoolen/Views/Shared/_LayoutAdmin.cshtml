@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin - UrbanWoolen</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar-->
        <div class="border-end bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom bg-light">UrbanWoolen Admin</div>
            <div class="list-group list-group-flush">
                <a asp-controller="Admin" asp-action="Index" class="list-group-item list-group-item-action p-3">Dashboard</a>
                <a asp-controller="Product" asp-action="Index" class="list-group-item list-group-item-action p-3">Products</a>
                <a asp-controller="Order" asp-action="Index" class="list-group-item list-group-item-action p-3">Orders</a>
            </div>
        </div>
        <!-- Page content wrapper-->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <span class="navbar-brand">Admin Panel</span>
                    <button class="btn btn-outline-secondary" onclick="location.href='@Url.Action("Logout", "Account")'">Logout</button>
                </div>
            </nav>
            <div class="container-fluid mt-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
