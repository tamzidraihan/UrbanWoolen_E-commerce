@model UrbanWoolen.Models.InventoryTransaction
@{
    ViewData["Title"] = "Adjust Stock";
}
<div class="container mt-4">
    <div class="card">
        <div class="card-header">Adjust Stock — @ViewBag.ProductName</div>
        <div class="card-body">
            <form asp-action="Adjust" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ProductId" />
                <div class="mb-3">
                    <label asp-for="Change" class="form-label">Change (±)</label>
                    <input asp-for="Change" type="number" class="form-control" />
                    <span asp-validation-for="Change" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Reason" class="form-label">Reason</label>
                    <select asp-for="Reason" class="form-select"
                            asp-items="Html.GetEnumSelectList<UrbanWoolen.Models.InventoryReason>()"></select>
                </div>
                <div class="mb-3">
                    <label asp-for="Reference" class="form-label">Reference (optional)</label>
                    <input asp-for="Reference" class="form-control" placeholder="PO#123 / ORDER#987 ..." />
                </div>
                <button class="btn btn-primary">Apply</button>
                <a asp-action="Inventory" class="btn btn-secondary">Back</a>
            </form>
        </div>
    </div>
</div>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
 }
