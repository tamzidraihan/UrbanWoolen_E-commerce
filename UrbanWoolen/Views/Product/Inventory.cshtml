@model List<UrbanWoolen.Models.Product>
@{
    ViewData["Title"] = "Inventory Overview";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-box-seam me-2"></i> Inventory Dashboard</h4>
            <a asp-action="Create" class="btn btn-outline-light btn-sm">
                <i class="bi bi-plus-circle"></i> Add New Product
            </a>
        </div>
        <div class="card-body table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Price (৳)</th>
                        <th>Stock</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="@(item.Stock <= 5 ? "table-danger" : "")">
                            <td>
                                <img src="@item.ImageUrl" alt="@item.Name" width="50" class="img-thumbnail" />
                            </td>
                            <td class="fw-semibold">@item.Name</td>
                            <td>@item.Category</td>
                            <td>@item.Price.ToString("0.00")</td>
                            <td>
                                <span class="badge bg-@(item.Stock <= 5 ? "danger" : "success")">
                                    @item.Stock
                                </span>
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
