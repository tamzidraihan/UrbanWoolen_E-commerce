@model IEnumerable<UrbanWoolen.Models.Product>
@{
    ViewData["Title"] = "Product List";
}

<div class="container-fluid px-4 px-lg-5 mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">🧥 Product Management</h2>
        <a class="btn btn-success" asp-action="Create">
            <i class="bi bi-plus-circle me-1"></i> Add New Product
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <strong>No products found.</strong> Click “Add New Product” to get started.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 row-cols-xl-4 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="@item.ImageUrl" class="card-img-top img-fluid" alt="@item.Name" style="height: 200px; object-fit: cover;" />

                        <div class="card-body">
                            <h5 class="card-title text-primary">@item.Name</h5>
                            <p class="card-text mb-1"><strong>Category:</strong> @item.Category</p>
                            <p class="card-text mb-1">
                                <strong>Price:</strong>
                                <span class="text-success">@item.Price.ToString("0.00") ৳</span>
                            </p>
                            <p class="card-text">
                                <strong>Stock:</strong>
                                @if (item.Stock < 5)
                                {
                                    <span class="badge bg-danger">Low (@item.Stock)</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@item.Stock</span>
                                }
                            </p>
                        </div>

                        <div class="card-footer bg-transparent border-0">
                            <div class="d-flex flex-wrap justify-content-center gap-2">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Are you sure you want to delete this product?');">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>
    }
</div>
